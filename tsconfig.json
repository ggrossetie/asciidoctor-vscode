{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2021",
    "outDir": "dist",
    "lib": [
      "dom",
      "es2021"
    ],
    "sourceMap": true,
    "rootDir": ".",
  },
  "include": [
    "src/**/*",
    "preview-src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "./src/**/__tests__",
    "./src/**/__mocks__",
  ]
}
